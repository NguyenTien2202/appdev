
@model AspnetIdentityRoleBasedTutorial.Models.Jewelry

@{
    ViewData["Title"] = "Create";
}

<style>
    .card {
        width: 50%;
        margin: auto;
        margin-top: 50px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        margin-right: 10px;
    }
</style>

<div class="card">
    <div class="card-body">
        <div class="card-header">
            <h3 class="card-title">Jewelry</h3>
        </div>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JewelryName" class="control-label"></label>
                <input asp-for="JewelryName" class="form-control" />
                <span asp-validation-for="JewelryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ImageFile">Image</label>
                <input type="file" id="ImageFile" name="ImageFile" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="JewelryTypeId" class="control-label"></label>
                <select asp-for="JewelryTypeId" class="form-control" asp-items="ViewBag.JewelryTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
        <div class="text-center">
            <a asp-action="AdminIndex" class="btn btn-primary">Back to List</a>
            
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



