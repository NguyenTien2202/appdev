@model AspnetIdentityRoleBasedTutorial.Models.Jewelry

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 800px;border-radius: 30px; overflow: hidden;">
        <div class="row g-0">
            <div class="col-md-6">
                <img style="border-radius: 30px; overflow: hidden;padding:15px;" src="@Url.Content("~/Uploads/" + Model.Image)" alt="@Model.JewelryName" class="img-fluid" />
                
            </div>

            <div class="col-md-6">
                <div class="card-body" style="padding-right:40px">
                    <h1 class="card-title">@Model.JewelryName</h1>
                    <h3 class="card-text text-center">@Model.FormattedPrice VND</h3>
                    <p class="card-text" style="text-align: justify;"><strong>Description:</strong> @Model.Description</p>
                    
                        <div style="margin-bottom:10px">
                            <a asp-action="Index" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                                </svg>
                            </a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                </svg>
                            </a>
                        }
                        </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>

